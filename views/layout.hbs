<html lang="en">
  <head>
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    {{{body}}}

    {{#if success}}
      <div
        class="bg-green-500 text-white p-2 rounded-md mx-auto w-1/2"
      >
        <strong class="font-bold">Success!</strong>
        <span class="block">{{success}}</span>
        <button
          type="button"
          class="close-btn float-right text-white"
          onclick="this.parentElement.style.display='none';"
        >&times;</button>
      </div>
    {{/if}}

    {{#if error}}
      <div
        class="bg-red-500 text-white p-2 rounded-md mx-auto w-1/2"
      >
        <strong class="font-bold">Error!</strong>
        <span class="block">{{error}}</span>
        <button
          type="button"
          class="close-btn float-right text-white"
          onclick="this.parentElement.style.display='none';"
        >&times;</button>
      </div>
    {{/if}}
  </body>
</html>